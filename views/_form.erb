<% board.pins.each do |pin| %>
  <div class="box">
    <div class="boxInner">
    <form method="POST" action="/<%= pin.id %>">
      <input name="value" value="<%= 0 == pin.value ? '1' : '0' %>" type="hidden"/>
      <button type="submit" value="Setzen" class="button <%= 0 == pin.value ? 'blue' : 'gray' %>">
        <div class="titleBox"><%= pin %></div>
      </button>
    </form>
    </div>
  </div>
<% end %>
